{% block stylesheets %}
		 <link rel="stylesheet" href="{{ asset('bundles/framework/css/index.css') }}" />
{% endblock %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData) }}</div>
{% endif %}

{% if is_granted('IS_AUTHENTICATED_FULLY') %}
	Logged in as {{ app.user.username }}</br>
	<a href="{{ path('logout') }}">logout</a>
{% else %}
	<form action="{{ path('login_check') }}" method="post">
		<label for="user">Authentification</label>
		<input type="text" id="username" name="_username" placeholder="nom de client"  />

		<input type="password" id="password" name="_password" placeholder="mot de passe" />
		<button type="submit">Connexion</button>
	</form>
{% endif %}