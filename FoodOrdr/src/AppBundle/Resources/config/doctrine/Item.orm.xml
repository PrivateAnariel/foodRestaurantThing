<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Item" table="ITEM">
    <indexes>
      <index name="FK_ID_MENU" columns="ID_MENU"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="ID_ITEM" columns="ID_ITEM"/>
    </unique-constraints>
    <id name="idItem" type="integer" column="ID_ITEM">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nom" type="string" column="NOM" length="25" nullable="false"/>
    <field name="description" type="string" column="DESCRIPTION" length="100" nullable="true"/>
    <field name="prix" type="decimal" column="PRIX" precision="10" scale="2" nullable="false"/>
    <many-to-one field="idMenu" target-entity="Menu">
      <join-columns>
        <join-column name="ID_MENU" referenced-column-name="ID_MENU"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
